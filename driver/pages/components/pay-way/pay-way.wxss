/* pages/components/pay-way/pay-way.wxss */
.mask{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.5);
  padding:0 25rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 500;
}
.pay-way-wrap{
  display:flex;
  height:100%;
  align-items:flex-end;
}
.pay-way-box{
  border-radius:5px 5px 0 0;
  background:#fff;
  width:100%;

}
.pay-way-header{
  position:relative;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  padding-top:50rpx;
}
.pay-title{
  font-size:30rpx;
  color:#C7C7CC;
}
.pay-amount{
  font-size:60rpx;
  color:#333;
}
.pay-way-close{
  width:48rpx;
  height:48rpx;
  position:absolute;
  right:30rpx;
  top:30rpx;
}
.pay-way-body{
  margin-top:40rpx;
}
.pay-way-item{
  display:flex;
  align-items:center;
  justify-content:space-between;
  height:88rpx;
  padding:0 30rpx;
  border-bottom:1px solid #C7C7CC;
}
.pay-way-text{
  vertical-align:middle;
  font-size:30rpx;
  color:#333;
}
.pay-way-img{
  width:58rpx;
  height:58rpx;
  vertical-align:middle;
  margin-right:30rpx;
}
.pay-way-footer{
  padding:50rpx 0;
}
.pay-sure-btn{
  width:650rpx;
  height:80rpx; 
  line-height:80rpx; 
  background:rgba(241,96,79,1);
  border-radius: 50rpx; 
  color:#fff;
  font-size:15px;
}