/* pages/components/pay-way/pay-way.wxss */
.mask-no-padding {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 500;
  display:flex;
  align-items:flex-end;
}
.mask-content-box{
  background:#fff;
  width:100%;
}
.mask-title {
  height: 120rpx;
  padding: 44rpx 30rpx;
  box-sizing: border-box;
  color:#333;
  text-align:center;
  font-size:15px;
  position:relative;
}
.close-box{
  position:absolute;
  right:20px;
  top:5px;
  padding:20px 5px;
}
.close-icon{
  width:32rpx;
  height:32rpx;
}
.pay-amout{
	text-align:center;
	font-size:70rpx;
	color:#333;
	font-weight:bold;
	margin:34rpx 0;
}
.mask-item {
  height: 120rpx;
  padding-left: 30rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  display:flex;
  align-items:center;
  justify-content:space-between;
  color:#333;
  font-size:32rpx;
  border-bottom:1px solid #ccc;
}
.pay-way-icon{
	width:48rpx;
	height:48rpx;
	margin-right:32rpx;
  vertical-align:middle;
}
.pay-choose-way-icon{
	width:52rpx;
	height:52rpx;
}
.pay-btn-box{
	box-sizing:border-box;
	height:140rpx;
	padding:20rpx;

}
.pay-btn{
	width:710rpx;
	height:100rpx; 
	line-height:100rpx;
	font-size:36rpx;
	background:rgba(241,96,79,1);
	border-radius: 4rpx;
	box-shadow:4rpx 0px 10rpx rgba(0,0,0,0.1); 
	color:#fff;
}
.mask-item.active {
  background: rgba(0, 0, 0, 0.1);
}