/* pages/translate/index/index.wxss */
/* lewyon start */
.translate-box{
  padding: 10px;
}
.card-style{
  box-shadow:1px 1px 7px #F5F5F5;
}
.translate-tip{
  font-size: 10px;
  padding: 15px 0;
  width: 100%;
  background: #fff; 
  text-align: center;
}
.translate-tip icon{
  color: #333333;
}
.translate-banner{
  width:100%;
  height: 150px;
}
.translate-banner image{
  display: flex;
  width: 100%;
  height: 100%;
}
.kind-list-item {
  margin: 20rpx 0;
  /* background-color: #FFFFFF; */
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text{
  flex: 1;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
  background-color: #fff;
}
.kind-list-item-hd.kind-list-item-email{
  border-top: 1px solid #f2f2f2;
}
.kind-list-item-hd.kind-list-item-address{
  margin-top: 20px;
}
.kind-list-item-hd input{
  flex: 2;
}
.kind-list-item-hd-show {
  opacity: .2;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
}
.kind-list-item-hd.kind-list-item-submit{
  background: none;
  padding: 0;
}
.translate-submit-btn{
  width: 100%;
  border-radius: 1px;
}
.kind-list-image{
  flex: 1;
}
.kind-list-image image{
  width: 100px;
  height: 100px;
}
.kind-list-image .kind-list-text{
  text-align: left;
  margin-bottom: 10px;
}
.modal-driving-license{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  /* opacity: .8;  */
}
.modal-box{
  position: relative;
  bottom: 0;
  left: 0;
  height: 100%;
  /* opacity: .1;  */
  background: #f2f2f2;
}
.modal-box .modal-driving-container{
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 110;
  background: #fff;
  width: 100%;
  /* height: 400px; */
  /* opacity: 1; */
  padding: 6px;
  padding-bottom: 20px;
}
.modal-driving-container image{
  width: 96%;
  height: 300px;
}
.modal-example-text{
  font-size: 13px;
  color: #666666;
  padding:20px 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-example-text text{

}
.modal-image-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.modal-image-btn button{
  width: 95%;
  font-size: 14px;
}
.modal-image-btn .choose-image{
  margin-top: 20px;
}

.label-1, .label-2{
  margin: 30rpx 0;
  display: flex;
  padding: 0 12px;
}
.label-2-text{
  color: #576B95;
  font-size: 28rpx;
  flex: 1;
}
.checkbox-3{
  display: block;
  margin: 30rpx 0;
}
.modal-driving-header{
  display: flex;
  margin-top: 20px;
}
.modal-driving-header text,.modal-driving-header icon{
  flex: 1;
  
}
.modal-driving-header icon{
  display: flex;
  align-content: flex-end;
  justify-content: flex-end;
  padding-right: 19px;
}
.header-title{
  flex: 8;
  color: #333333;
  font-size: 14px;
}
.modal-price{
  font-size: 23px;
  color: #000;
  display: flex;
  align-content: center;
  justify-content: center;
  padding: 20px 0;
}
.modal-check-box{
  display: flex;
  align-content: center;
  justify-content: center;
}
.modal-check-container{
  margin-top: 80px;
  padding-top: 20px;
  width: 300px;
  /* height: 209; */
  background: #fff;
  text-align: center;
}
.modal-check-container icon{
  flex: 1;
  display: flex;
  align-content: center;
  justify-content: center;
  padding-bottom: 20px;
}
.pay-text{
  font-size: 14px;
  padding-top: 20px;
}
.pay-text .pay-num{
  font-size: 18px;
  color: #000;
  font-weight: bold;
}
.choose-pay-btn{
  border-top: 1px solid #f2f2f2;
  display: flex;
  align-content: center;
  justify-content:center;
  height: 55px;
  margin-top: 20px;
}
.choose-pay-btn text{
  padding-top: 20px;
  flex: 1;
  display: flex;
  align-content: center;
  justify-content:center;
}
.choose-pay-btn .pay-btn-cancel{
  border-right: 1px solid #f2f2f2; 
}
/* lewyon end */
