<!-- 机场接送 -->
<view class='container'>
  <view class='main-wrap'>
    <view class='banner'>
      <image src="{{banner}}"></image>
    </view>
    <view class='main-nav dp-flex flex-one air-nav'>
      <view wx:for="{{nav}}" class="{{flag==index ? 'active': ''}}" data-i="{{index}}" bindtap='onNav'>
        <image src='{{item.src}}'></image>
        <view>{{item.name}}</view>
      </view>
    </view>
  </view>
  <view class='main-wrap ad-pad' wx:if="{{flag != 2}}">
    <view class='dp-flex jc-sb'>
      <view class='main-tit'>填写用车信息</view>
      <view class='search' data-url='/pages/air/check/check' bindtap='go'>
        <input placeholder='按航班查询' placeholder-class="ph"></input>
      </view>
    </view>
    <view class='main-form'>
      <view class="item">
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{airplan}}" range-key="name">
          <view class="dp-flex">
            <text class="lab">机场</text>
            <view class='info'>{{airplan[index].name}}</view>
          </view>
        </picker>
      </view>
      <view class='dp-flex item' wx:if="{{flag == 0}}">
        <text class='lab'>送达</text>
        <input placeholder='请输入送达地'></input>
      </view>
      <view class='dp-flex item' wx:else>
        <text class='lab'>出发</text>
        <input placeholder='您从哪上车？'></input>
      </view>
    </view>
    <view class='dp-flex flex-one air-sub'>
      <view class='dp-flex'>
        <image src='/pages/imgs/airplan_nav/num.png'></image>
        <text>乘车人数</text>
      </view>
      <view class='dp-flex'>
        <image src='/pages/imgs/airplan_nav/baggage.png' style='height: 22rpx;'></image>
        <text>行李数量</text>
      </view>
      <view class='dp-flex'>
        <image src='/pages/imgs/airplan_nav/time.png' style='height: 20rpx;'></image>
        <text>降落时间</text>
      </view>
    </view>
  </view>

  <view class='main-wrap ad-pad' wx:if="{{flag==2}}">
    <view class='main-tit ad-b-bor'>往返</view>
    <view class='dp-flex'>
      <view class='main-form located'>
        <view class='item'>
          <view class='sub-lab'>从机场</view>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{airplan}}" range-key="name">
            <view class="dp-flex">
              <view class='info'>{{airplan[index].name}}</view>
            </view>
          </picker>
        </view>
        <view class='item no-bor-b'>
          <view class='sub-lab'>到地点</view>
          <input placeholder='您往返的地点' placeholder-class='ph'></input>
        </view>
      </view>
      <view class='to-back'>wf</view>
    </view>
  </view>

  <view class='main-wrap ad-pad' wx:if="{{flag==2}}">
    <view class='main-tit' wx:if="{{!showBack}}" data-elem='showBack' bindtap='toggle'>往返地点不同</view>
    <view wx:else>
      <view class='main-tit'>返程</view>
      <view class='dp-flex'>
        <view class='main-form located'>
          <view class='item'>
            <view class='sub-lab'>从机场</view>
            <picker bindchange="bindPickerChange" value="{{index}}" range="{{airplan}}" range-key="name">
              <view class="dp-flex">
                <view class='info'>{{airplan[index].name}}</view>
              </view>
            </picker>
          </view>
          <view class='item no-bor-b'>
            <view class='sub-lab'>到地点</view>
            <input placeholder='您往返的地点' placeholder-class='ph'></input>
          </view>
        </view>
        <view class='to-back'>wf</view>
      </view>
    </view>
  </view>

  <view class='btn-wrap'>
    <view class='tips' wx:if="{{flag==0}}">以实际降落时间开始计算，免费等待90分钟</view>
    <button class='main-btn' wx:if="{{flag != 2}}" bindtap='onCheck'>立即查询</button>
    <button class='main-btn' wx:if="{{flag==2}}" data-url='/pages/air/next/next' bindtap='go'>继续</button>
  </view>
</view>