<!--pages/register/code/code.wxml-->
<view class="displayf flexdirec altc jsccs">
	<view class="login-wrap">
		<view class="w mb50">
			<text class="fwb login-form-title displayb">输入验证码</text>
			<text class="fz12 displayb color-333" style="width:292px;">已给手机号<text class="highlight-text">{{areaCode+' '+phone}} </text>发送了一个6位数验证码</text>
		</view>
		<view>
			<form bindsubmit="register">
				<view class="pr mb25">
					<input class="login-form-input mb5" type="number" placeholder="输入6位验证码" placeholder-class="login-placeholder" name="code"/>
          			<text class="fz12 highlight-text ml15">重新发送</text>
				</view>
				<view>
					<button formType="submit" class="login-form-btn register-next-btn">下一步</button>
				</view>
			</form>
		</view>
	</view>
</view>
