/* pages/login/login/login.wxss */
page{
    color:#fff;
    overflow:hidden;
}
.wechat-login{
    margin:100rpx 0;
    width:550rpx;
    height:100rpx; 
    background:rgba(74,76,91,1);
    border-radius: 50rpx;
    box-shadow:0 -1px 8px rgba(74,76,91,1); 
}
.wechat-login .wechat-img{
    position:absolute;
    left:50rpx;
    font-weight:middle;
}
.or-box{
    margin-bottom:154rpx;
}
.or-text{
    width:33rpx;
    height:19rpx; 
    font-size:24rpx;
    color:rgba(51,51,51,1);
    line-height:18rpx;
    background:#fff;
    padding:0 5px;
}
.or-line{
    width:550px;
    height:1px; 
    background:rgba(204,204,204,1);

}
.form-input{
    border-bottom:1px solid #CCCCCC;
    font-size:28rpx;
    color:rgba(187,187,187,1);
    line-height:18px;
}
.forget-pwd{
    position:absolute;
    top:10rpx;
    right:0;
    font-size:24rpx;
    color:rgba(102,102,102,1);
}
.form-btn{
    width:550rpx;
    height:100rpx; 
    background:rgba(241,96,79,1);
    border-radius: 50rpx; 
    font-size:36rpx;
    color:rgba(255,255,255,1);
    box-shadow:0 0 5px rgba(241,96,79,1);
}