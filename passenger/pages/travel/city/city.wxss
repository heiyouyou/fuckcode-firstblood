/* pages/travel/city/city.wxss */
.nav {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  box-shadow: 4px 0px 10px rgba(0,0,0,0.1);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 500;
}
.nav > view {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.nav > view text {
  font-size: 28rpx;
  color: #333;
  padding: 6rpx 20rpx;
  border-radius: 25rpx;
}
.nav .active text {
  color: #fff;
  background: #F1604F
}

.travel {
  margin-top: 90rpx;
}

.filter {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #666;
  background: #fff;
  position: fixed;
  left: 0;
  top: 90rpx;
}
.filter-nav, .filter-item > view {
  border-bottom: 1px solid #CCC;
  padding: 30rpx;
}
.filter-nav {
  width: 30%;
  background: #fff;
}
.filter-item {
  width: 70%;
  height: 100%;
  background: #F2F4F5;
  padding-left: 30rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.filter-item > view {
  padding-left: 0;
}
.filter .active {
  color: #F1604F;
}