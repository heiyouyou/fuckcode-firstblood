/* pages/travel/city/city.wxss */
.nav {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  box-shadow: 4px 0px 10px rgba(0,0,0,0.1);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 500;
}
.nav > view {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.nav > view text {
  font-size: 28rpx;
  color: #333;
  padding: 6rpx 20rpx;
  border-radius: 25rpx;
}
.nav .active text {
  color: #fff;
  background: #F1604F
}

.travel {
  margin-top: 90rpx;
}

.filter {
  width: 100%;
  height: 100%;
  position: relative;
}

.filter-nav {
  color: #666;
  background: #fff;
  flex: 1;
}
.filter-item {
  flex: 2;
}
.filter .active {
  color: #F1604F;
}