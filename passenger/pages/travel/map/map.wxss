/* pages/travel/map/map.wxss */
map {
  height: 80%;
}

.route-plan {
  display: flex;
  align-items: center;
  height: 20%;
  padding: 0 30rpx; 
  overflow-x: scroll;
}

.route-plan > view {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  width: 600rpx;
  height: 200rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}
.pro-img {
  margin-right: 20rpx;
}
.pro-img image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 4rpx;
}

.day {
  color: #F1604F;
  border-radius: 3rpx;
  background: #FEEFED;
  padding: 6rpx 10rpx; 
}

.star image {
  width: 24rpx;
  height: 24rpx;
  margin-top: 40rpx;
}