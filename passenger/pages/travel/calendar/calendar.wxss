/* pages/travel/calendar/calendar.wxss */

/* 日历 */

.calendar-content {
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
}

.calendar-bar {
  display: flex;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0;
  padding: 0;
  background: #fff;
  position: fixed;
  top: 0;
}

.calendar-bar view {
  flex: 1;
  text-align: center;
}

.calendar-bar view:first-child, .calendar-bar view:last-child {
  color: #f55;
}

.calendar-items {
  margin-top: 70rpx;
  height: 100%;
  background: #fff;
}

.calendar-title {
  text-align: center;
  height: 45rpx;
  line-height: 45rpx;
  color: #353535;
  letter-spacing: 1px;
  margin: 10px auto 0;
}

.calendar-month:not(:last-of-type) {
  border-bottom: 20rpx solid #f2f4f5;
}

.calendar-days {
  padding: 0;
  margin-top: 0;
}

.calendar-days > view {
  display: inline-block;
  vertical-align: middle;
  width: 14.28%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #333;
  margin-bottom: 10rpx;
}

.calendar-days .active {
  background-color: #f1604f !important;
  border-radius: 50%;
  color: #fff;
}

.calendar-days text {
  display: block;
  width: 100rpx;
  height: 100rpx;
}

