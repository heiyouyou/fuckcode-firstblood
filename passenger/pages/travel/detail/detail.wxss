/* pages/travel/detail/detail.wxss */

.detial-top {
  height: 550rpx;
  font-size: 30rpx;
  color: #fff;
  position: relative;
}

.detial-top image {
  width: 52rpx;
  height: 44rpx;
}

.city-name {
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 10%;
  right: 30rpx;
}

.name-wrap {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 40rpx 30rpx;
}

.name {
  font-size: 56rpx;
}

.name-esl {
  font-size: 36rpx;
}

.basic-info {
  font-size: 28rpx;
  color: #666;
  padding: 30rpx;
  background: #fff;
}

.basic-info-list > view {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.basic-info .lab, .detail-tit {
  color: #333;
  font-family: PingFang-SC-Bold;
}

.detail-tit {
  font-size: 40rpx;
  margin: 20rpx auto 40rpx;
}

.basic-info .lab {
  font-size: 30rpx;
  margin-right: 40rpx;
}

map {
  width: 95%;
  height: 260rpx;
  margin: 50rpx auto;
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.map-recommend {
  width: 100%;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  text-align: center;
  color: #f1604f;
  position: absolute;
  bottom: 0;
}

.detail-wrap {
  padding: 30rpx;
}

.detail-wrap .main-wrap {
  padding: 40rpx 30rpx;
}

.route-basic-tit {
  font-size: 30rpx;
}

.route-day {
  color: #fff;
  background: #f1604f;
  border-radius: 4rpx;
  padding: 7rpx 14rpx;
  margin-right: 20rpx;
}

.route-underline {
  color: #3cbcff;
  text-decoration: underline;
}

.route-plan-wrap {
  padding: 50rpx 0 70rpx;
}

.route-plan-detial {
  padding-left: 50rpx;
}

.route-plan, .route-start {
  position: relative;
}
.route-plan:before, .route-start:before {
  content: "";
  display: block;
  border-radius: 50%;
  position: absolute;
  top: 30%;
  left: -30rpx;
}
.route-plan:before {
  width: 12rpx;
  height: 12rpx;
  border: 1px solid #f1604f;
}

.route-start:before {
  width: 14rpx;
  height: 14rpx;
  background: #F1604F;
}