/* pages/travel/detail/detail.wxss */

.detial-top {
  height: 550rpx;
  font-size: 30rpx;
  color: #fff;
  position: relative;
}

.detial-top image {
  width: 52rpx;
  height: 44rpx;
}

.city-name {
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 10%;
  right: 30rpx;
}

.name-wrap {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 40rpx 30rpx;
}

.name {
  font-size: 56rpx;
}

.name-esl {
  font-size: 36rpx;
}

.basic-info {
  font-size: 28rpx;
  color: #666;
  padding: 30rpx;
  background: #fff;
}

.basic-info-list > view {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.basic-info .lab, .detail-tit {
  color: #333;
  font-family: PingFang-SC-Bold;
}

.detail-tit {
  font-size: 40rpx;
  margin: 20rpx auto 40rpx;
}

.basic-info .lab {
  font-size: 30rpx;
  margin-right: 40rpx;
}

map {
  width: 95%;
  height: 260rpx;
  margin: 50rpx auto;
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.map-recommend {
  width: 100%;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  text-align: center;
  color: #f1604f;
  position: absolute;
  bottom: 0;
}

.detail-wrap {
  padding: 30rpx;
}

.detail-wrap .main-wrap {
  padding: 40rpx 30rpx;
}

.route-basic-tit {
  font-size: 30rpx;
}

.route-day {
  color: #fff;
  background: #f1604f;
  border-radius: 4rpx;
  padding: 7rpx 14rpx;
  margin-right: 20rpx;
}

.route-underline {
  color: #3cbcff;
  text-decoration: underline;
}

.route-plan-wrap {
  padding: 50rpx 0 70rpx;
}

.route-plan-detial {
  padding-left: 50rpx;
}

.route-plan, .route-start {
  position: relative;
}

.route-plan {
  margin-bottom: 24rpx;
}

.route-start {
  margin-bottom: 54rpx;
}

.route-plan:before, .route-start:before {
  content: "";
  display: block;
  border-radius: 50%;
  position: absolute;
  top: 30%;
  left: -30rpx;
}

.route-plan:before {
  width: 12rpx;
  height: 12rpx;
  border: 1px solid #f1604f;
}

.route-start:before {
  width: 14rpx;
  height: 14rpx;
  background: #f1604f;
}

.route-plan:after, .route-start:after {
  content: "";
  width: 2rpx;
  background: #ccc;
  position: absolute;
  left: -23rpx;
  top: 32rpx;
}

.route-plan:after {
  height: 30rpx;
}

.route-start:after {
  height: 60rpx;
}

.last-route-start {
  margin-bottom: 0;
}

.last-route-start:after {
  display: none;
}

.route-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: -20rpx;
}

.more {
  margin-bottom: 50rpx;
  text-align: center;
  color: #f1604f;
}

.detial-tips {
  margin-bottom: 40rpx;
}

.detial-tips > view:first-of-type {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.detial-tips > view:last-of-type {
  font-size: 28rpx;
  color: #666;
  line-height: 46rpx;
}

.detail-tips-all {
  color: #f1604f;
}

.recommends {
  display: flex;
  align-items: center;
  overflow-x: scroll;
}

.recommends > view {
  flex-shrink: 0;
  width: 300rpx;
  height: 360rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.pro-img image {
  width: 100%;
  height: 230rpx;
}

.recommends-intro {
  padding: 25rpx;
  font-size: 30rpx;
}

.recommends-intro image {
  width: 24rpx;
  height: 24rpx;
  margin: 8rpx 2rpx 0 0;
}

.btn-wrap-two {
  position: static;
  padding: 20rpx;
  background: #fff;
}

.detial-popup {
  width: 534rpx;
  height: 486rpx;
  background: #fff;
  border-radius: 4rpx;
  margin: auto;
  color: #666;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 501;
}

.detial-popup > view:first-of-type {
  padding: 40rpx;
}

.detial-popup > view:last-of-type {
  font-size: 34rpx;
  color: #f1604f;
  padding: 30rpx;
  text-align: center;
  border-top: 1px solid #ccc;
}

.detial-popup > view > view + view {
  margin-top: 8px;
}

.detial-popup > view > view {
  line-height: 40rpx;
}
