@import './pages/styles/base.wxss';
@import './pages/styles/main.wxss'; 
@import './pages/fonts/iconfont.wxss'; 

/**app.wxss**/
page {
  width: 100%;
  height: 100%;
  font-family:'PingFang-SC-Regular';
}

/* 公用最外层 */
.container {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
} 
/* 公用最外层end */

/* 公用块 */
.main-warp {
  background: #fff;
  border-radius: 4px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.06);
  overflow: hidden;
}
/* 公用块end */

/* 登录、注册 start */
.login-wrap{
  width:550rpx;
  margin-top:110rpx;
}
.login-form-title{
  color:#333;
  font-size:80rpx;
}
.login-form-btn{
  width:550rpx;
  height:100rpx; 
  line-height:100rpx;
  font-weight:bold;
  border-radius: 50rpx; 
  font-size:36rpx;
  color:#fff;
}
.login-form-input{
  border-bottom:1px solid #CCCCCC;
  font-size:28rpx;
  color:#333333;
  line-height:18px;
}
.register-next-btn{
  background:#fff;
  color:#F1604F;
  border:1px solid #F1604F;
}
.login-placeholder{
  text-indent:15px;
  color:#BBBBBB;
  font-size:14px;
}
/* 登录、注册 end */