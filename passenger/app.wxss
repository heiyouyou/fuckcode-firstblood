@import './pages/styles/base.wxss';
@import './pages/styles/main.wxss'; 

/**app.wxss**/
page {
  width: 100%;
  height: 100%;
  font-family:'PingFang-SC-Regular';
}

/* 公用最外层 */
.container {
  width: 100%;
  height: 100%;
  color: #333;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
} 
/* 公用最外层end */

/* 公用块 */
.main-wrap {
  background: #fff;
  border-radius: 4rpx;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.06);
  overflow: hidden;
}
.main-wrap + .main-wrap {
  margin-top: 20rpx;
}
/* 公用外层end */

.dp-flex {
  display: flex;
  align-items: center;
}
.dp-flex.flex-one > view {
  flex: 1;
}
.dp-flex.jc-sb {
  justify-content: space-between;
}
/* 公用样式end */

/* 导航区 */
.main-nav {
  color: #666;
  padding: 57rpx 40rpx 37rpx;
}

.main-nav > view {
  font-size: 24rpx;
  text-align: center;
}

.main-nav > view:not(:last-of-type) {
  margin-right: 80rpx;
}

.main-nav > view image {
  width: 60rpx;
  height: 28rpx;
  margin-bottom: 25rpx;
}
/* 导航区end */

/* 搜索框 */
.search {
  position: relative;
}
.search input {
  font-size: 28rpx;
  text-align: center;
  background: #F2F2F2;
  border-radius: 30rpx;
}
.search .ph {
  color: #BBB;
}
/* 搜索框end */

.main-btn {
  width: 100%;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background: #F1604F;
  border-radius: 4rpx;
  padding: 10rpx;
}